<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="adapter"
            type="com.leviancode.android.gsmbox.ui.recipients.adapters.RecipientGroupExpandableListAdapter" />
    </data>

        <ExpandableListView
            android:id="@+id/recipient_expandable_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="true"
            android:divider="@android:color/transparent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:childDivider="@android:color/transparent"
            app:setExpandableAdapter="@{adapter}"
            tools:listitem="@layout/list_item_recipient_group"/>
</layout>