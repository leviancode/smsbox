<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/widget_background"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/widget_appbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_header_height"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/widget_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:gravity="center|start"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"
                android:text="@string/app_name" />

            <ImageButton
                android:id="@+id/widget_button_update"
                android:layout_width="@dimen/send_button_widget_size"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginEnd="14dp"
                app:iconTint="@null"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_refresh_24"
                android:contentDescription="@string/update_widget" />

        </FrameLayout>

        <ListView
            android:id="@+id/widget_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:background="@drawable/widget_list_background"
            tools:listitem="@layout/widget_item" />

    </LinearLayout>


</FrameLayout>