<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.leviancode.android.gsmbox.data.model.recipients.GroupWithRecipients" />

        <variable
            name="viewModel"
            type="com.leviancode.android.gsmbox.ui.recipients.view.groups.list.RecipientGroupListViewModel" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_recipient_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="1dp">

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="1dp"
            android:layout_gravity="top"
            android:background="?android:attr/listDivider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/recipient_holder_height"
            android:descendantFocusability="blocksDescendants"
            android:paddingStart="16dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:paddingEnd="12dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/recipient_group_image"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:padding="6dp"
                android:scaleType="fitCenter"
                app:setImageTintGroup="@{model.group.recipientGroupIconColor}"
                tools:tint="@color/default_group_icon_color"
                android:src="@drawable/ic_baseline_source_24" />

            <TextView
                android:id="@+id/tv_recipient_group_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:text="@{model.group.recipientGroupName}"
                android:textColor="@color/text_title"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:text="Title" />

            <TextView
                android:id="@+id/tv_templates_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:text="@{model.sizeAsString}"
                android:textSize="14sp"
                tools:text="8" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ib_popup_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/popup_btn_margin_end"
                android:contentDescription="@string/open_option_menu"
                android:onClick="@{(view) -> viewModel.onGroupPopupMenuClick(view, model)}"
                android:padding="4dp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:tint="@color/popup_menu"
                android:src="@drawable/ic_baseline_more_vert_24" />

        </LinearLayout>

        <!--<View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />-->
    </com.google.android.material.card.MaterialCardView>


</layout>
