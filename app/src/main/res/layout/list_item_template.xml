<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.leviancode.android.gsmbox.ui.viewmodel.TemplateViewModel" />
        <variable
            name="clickListener"
            type="com.leviancode.android.gsmbox.adapters.ListItemClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">

        <ImageButton
            android:id="@+id/iv_template_favorite"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"
            android:padding="4dp"
            app:tint="@color/yellow"
            android:background="@android:color/transparent"
            android:onClick="@{() -> viewModel.onFavoriteClick()}"
            tools:src="@drawable/ic_baseline_star_outline_24"
            android:src="@{viewModel.template.favorite ?  @drawable/ic_baseline_star_24 : @drawable/ic_baseline_star_outline_24}" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/edit_text_template_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@{viewModel.template.templateName}"
                android:textColor="@color/text_title"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Title" />

            <TextView
                android:id="@+id/edit_text_template_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:text="@{viewModel.template.message}"
                android:textColor="#252525"
                tools:text="Message" />

            <TextView
                android:id="@+id/tv_template_recipient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-light"
                android:text="@{viewModel.template.recipientsAsString}"
                android:textColor="@color/text_description"
                tools:text="+3801234567" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ib_template_send"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:padding="6dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:onClick="@{() -> clickListener.onClick(viewModel.template.data)}"
            android:src="@drawable/ic_baseline_send_24"
            android:tint="@{viewModel.template.templateIconColor}"
            tools:tint="@color/secondary"/>


    </LinearLayout>
</layout>