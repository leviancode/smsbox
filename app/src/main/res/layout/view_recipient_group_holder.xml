<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.brainymobile.android.smsbox.ui.screens.recipients.recipients.edit.RecipientEditViewModel" />
        <variable
            name="model"
            type="com.brainymobile.android.smsbox.ui.entities.recipients.RecipientGroupUI" />
    </data>

    <LinearLayout
        android:id="@+id/recipient_item_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_remove_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?android:selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{(view) -> viewModel.onRemoveGroupClick(view, model)}"
            android:padding="3dp"
            android:src="@drawable/ic_baseline_close_24"
            app:tint="@color/red_600"
            android:contentDescription="@string/remove_phone_number" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_group"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:text="@string/group"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="18sp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_editable_recipient_group_name"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:text="@{model.name}"
            android:textColor="?android:attr/textColorSecondary"
            tools:text="Universe"
            android:textSize="18sp"/>

        </LinearLayout>

</layout>

