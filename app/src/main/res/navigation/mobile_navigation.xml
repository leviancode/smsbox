<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_template_group_list">

    <fragment
        android:id="@+id/nav_template_group_list"
        android:name="com.leviancode.android.gsmbox.ui.templates.view.fragment.TemplateGroupListFragment"
        android:label="@string/title_templates"
        tools:layout="@layout/fragment_template_group_list" >

        <action
            android:id="@+id/action_open_group_templates"
            app:enterAnim="@anim/slide_left"
            app:exitAnim="@anim/slide_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"
            app:destination="@id/nav_template_list" />

        <action
            android:id="@+id/action_open_editable_group"
            app:destination="@id/nav_editable_group"/>
    </fragment>

    <fragment
        android:id="@+id/nav_template_list"
        android:name="com.leviancode.android.gsmbox.ui.templates.view.fragment.TemplateListFragment"
        android:label="{groupName}"
        tools:layout="@layout/fragment_template_list">
        <argument
            android:name="groupId"
            app:argType="string" />
        <argument
            android:name="groupName"
            app:argType="string" />
        <action
            android:id="@+id/action_open_editable_template"
            app:destination="@id/nav_editable_template" />
    </fragment>

    <fragment
        android:id="@+id/nav_favorites"
        android:name="com.leviancode.android.gsmbox.ui.favorites.FavoritesFragment"
        android:label="@string/title_favorites"
        tools:layout="@layout/fragment_favorites" />

    <fragment
        android:id="@+id/nav_recipients"
        android:name="com.leviancode.android.gsmbox.ui.recipients.view.fragment.RecipientsPagerFragment"
        android:label="@string/title_recipients"
        tools:layout="@layout/fragment_recipients_pager" >
        <action
            android:id="@+id/action_open_editable_recipient"
            app:destination="@id/nav_editable_recipient" />
        <action
            android:id="@+id/action_open_editable_recipient_group"
            app:destination="@id/nav_editable_recipient_group" />
        <action
            android:id="@+id/action_open_select_recipient"
            app:destination="@id/nav_select_recipient" />
    </fragment>

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.leviancode.android.gsmbox.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />

    <dialog
        android:id="@+id/nav_editable_group"
        android:name="com.leviancode.android.gsmbox.ui.templates.view.dialog.EditableTemplateGroupDialog"
        android:label="New Group"
        tools:layout="@layout/dialog_editable_template_group">

        <argument
            android:name="group"
            app:argType="com.leviancode.android.gsmbox.data.model.templates.TemplateGroup" />

    </dialog>

    <dialog
        android:id="@+id/nav_editable_template"
        android:name="com.leviancode.android.gsmbox.ui.templates.view.dialog.EditableTemplateDialog"
        android:label="New Template"
        tools:layout="@layout/dialog_editable_template">

        <argument
            android:name="template"
            app:argType="com.leviancode.android.gsmbox.data.model.templates.Template" />

        <action
            android:id="@+id/action_open_editable_recipient"
            app:destination="@id/nav_editable_recipient" />

        <action
            android:id="@+id/action_select_recipient_group"
            app:destination="@id/nav_select_recipient_group" />
        <action
            android:id="@+id/action_select_recipient"
            app:destination="@id/nav_select_recipient" />

    </dialog>

    <dialog
        android:id="@+id/nav_editable_recipient"
        android:name="com.leviancode.android.gsmbox.ui.recipients.view.dialog.EditableRecipientDialog"
        android:label="New Recipient"
        tools:layout="@layout/dialog_editable_recipient">

        <argument
            android:name="recipient"
            app:argType="com.leviancode.android.gsmbox.data.model.recipients.Recipient" />
        <action
            android:id="@+id/action_open_recipient_group_list"
            app:destination="@id/nav_select_recipient_group" />

    </dialog>

    <dialog
        android:id="@+id/nav_editable_recipient_group"
        android:name="com.leviancode.android.gsmbox.ui.recipients.view.dialog.EditableRecipientGroupDialog"
        android:label="New Group"
        tools:layout="@layout/dialog_editable_recipient_group">

        <argument
            android:name="group"
            app:argType="com.leviancode.android.gsmbox.data.model.recipients.RecipientGroup" />

    </dialog>

    <dialog
        android:id="@+id/nav_select_recipient_group"
        android:name="com.leviancode.android.gsmbox.ui.recipients.view.dialog.RecipientGroupSelectListDialog"
        android:label="Select Group"
        tools:layout="@layout/dialog_select_list_recipient_group">

        <argument
            android:name="groupName"
            app:nullable="true"
            app:argType="string"/>
        <argument
            android:name="showEmpty"
            app:argType="boolean"
            android:defaultValue="true"/>
    </dialog>

    <dialog
        android:id="@+id/nav_select_recipient"
        android:name="com.leviancode.android.gsmbox.ui.recipients.view.dialog.RecipientSelectListDialog"
        android:label="Select Recipient"
        tools:layout="@layout/dialog_select_list_recipient">

        <argument
            android:name="recipientId"
            app:nullable="true"
            app:argType="string"/>
    </dialog>


</navigation>