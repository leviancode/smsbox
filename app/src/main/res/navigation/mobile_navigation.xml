<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_template_group_list">

    <fragment
        android:id="@+id/nav_template_group_list"
        android:name="com.leviancode.android.gsmbox.ui.screens.templates.groups.list.TemplateGroupListFragment"
        android:label="@string/title_templates"
        tools:layout="@layout/fragment_template_group_list">

        <action
            android:id="@+id/action_open_group_templates"
            app:destination="@id/nav_template_list"
            app:enterAnim="@anim/slide_left"
            app:exitAnim="@anim/slide_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />

        <action
            android:id="@+id/action_open_editable_group"
            app:destination="@id/nav_template_group_edit" />
    </fragment>

    <fragment
        android:id="@+id/nav_template_list"
        android:name="com.leviancode.android.gsmbox.ui.screens.templates.templates.list.TemplateListFragment"
        android:label="{groupName}"
        tools:layout="@layout/fragment_template_list">
        <argument
            android:name="groupId"
            app:argType="integer" />

        <argument
            android:name="groupName"
            app:argType="string" />

        <action
            android:id="@+id/action_open_editable_template"
            app:destination="@id/nav_template_edit" />
    </fragment>

    <fragment
        android:id="@+id/nav_favorites"
        android:name="com.leviancode.android.gsmbox.ui.screens.favorites.FavoritesFragment"
        android:label="@string/title_favorites"
        tools:layout="@layout/fragment_favorites">
        <action
            android:id="@+id/action_open_editable_template"
            app:destination="@id/nav_template_edit" />
    </fragment>

    <fragment
        android:id="@+id/nav_recipients"
        android:name="com.leviancode.android.gsmbox.ui.screens.recipients.viewpager.RecipientsPagerFragment"
        android:label="@string/title_recipients"
        tools:layout="@layout/fragment_recipients_pager">
        <action
            android:id="@+id/action_open_editable_recipient"
            app:destination="@id/nav_recipient_edit" />
    </fragment>

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.leviancode.android.gsmbox.ui.screens.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_open_placeholders"
            app:destination="@id/nav_placeholders"
            app:enterAnim="@anim/slide_left"
            app:exitAnim="@anim/slide_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_open_languages"
            app:destination="@id/nav_languages"
            app:enterAnim="@anim/slide_left"
            app:exitAnim="@anim/slide_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/nav_languages"
        android:name="com.leviancode.android.gsmbox.ui.screens.settings.languages.LanguagesFragment"
        tools:layout="@layout/fragment_languages" />

    <fragment
        android:id="@+id/nav_placeholders"
        android:name="com.leviancode.android.gsmbox.ui.screens.settings.placeholders.list.PlaceholdersFragment"
        android:label="@string/placeholders"
        tools:layout="@layout/fragment_placeholders">
        <action
            android:id="@+id/action_open_editable_placeholder"
            app:destination="@id/nav_placeholder_edit"
            app:enterAnim="@anim/slide_left"
            app:exitAnim="@anim/slide_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>

    <dialog
        android:id="@+id/nav_placeholder_edit"
        android:name="com.leviancode.android.gsmbox.ui.screens.settings.placeholders.edit.PlaceholderEditFragment"
        android:label="@string/new_placeholder"
        tools:layout="@layout/fragment_placeholder_edit">

        <argument
            android:name="id"
            app:argType="integer" />

    </dialog>

    <fragment
        android:id="@+id/nav_template_group_edit"
        android:name="com.leviancode.android.gsmbox.ui.screens.templates.groups.edit.TemplateGroupEditFragment"
        android:label="New Group"
        tools:layout="@layout/fragment_template_group_edit">

        <argument
            android:name="groupId"
            android:defaultValue="0"
            app:argType="integer" />

    </fragment>

    <fragment
        android:id="@+id/nav_template_edit"
        android:name="com.leviancode.android.gsmbox.ui.screens.templates.templates.edit.TemplateEditFragment"
        android:label="New Template"
        tools:layout="@layout/fragment_template_edit">

        <argument
            android:name="groupId"
            app:argType="integer" />

        <argument
            android:name="templateId"
            android:defaultValue="0"
            app:argType="integer" />

        <action
            android:id="@+id/action_open_editable_recipient"
            app:destination="@id/nav_recipient_edit" />

    </fragment>

    <fragment
        android:id="@+id/nav_recipient_edit"
        android:name="com.leviancode.android.gsmbox.ui.screens.recipients.recipients.edit.RecipientEditFragment"
        android:label="New Recipient"
        tools:layout="@layout/fragment_recipient_edit">

        <argument
            android:name="recipientId"
            android:defaultValue="0"
            app:argType="integer" />

        <argument
            android:name="phoneNumber"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="recipientName"
            app:argType="string"
            android:defaultValue="null"
            app:nullable="true" />

    </fragment>


</navigation>