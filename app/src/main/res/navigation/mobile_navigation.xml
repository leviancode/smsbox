<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_templates">

    <fragment
        android:id="@+id/navigation_templates"
        android:name="com.leviancode.android.gsmbox.ui.view.fragment.TemplatesFragment"
        android:label="@string/title_templates"
        tools:layout="@layout/fragment_templates" />

    <fragment
        android:id="@+id/navigation_favorites"
        android:name="com.leviancode.android.gsmbox.ui.view.fragment.FavoritesFragment"
        android:label="@string/title_favorites"
        tools:layout="@layout/fragment_favorites" />

    <fragment
        android:id="@+id/navigation_recipients"
        android:name="com.leviancode.android.gsmbox.ui.view.fragment.RecipientsFragment"
        android:label="@string/title_recipients"
        tools:layout="@layout/fragment_recipients" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.leviancode.android.gsmbox.ui.view.fragment.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />
</navigation>